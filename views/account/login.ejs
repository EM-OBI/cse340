<!-- Content header -->
<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
      res.redirect('/')
    } %>

<!-- Send flash message -->
<%- messages() %>

<!-- Display validation errors -->
<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
    <% }); %>
    </ul>
    <% } %>

<!-- Login form -->
<form action="/account/login" id="login-form" method="post">
    <label>Email: <input type="email" name="account_email" autocomplete="email" title="user email" required value="<%= locals.account_email %>"></label>
    <label>Password: <input type="password" name="account_password" autocomplete="current-password" title="user password" class="pswd" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"></label>
    <label class="show-hide-pswd"><input type="checkbox" name="pswd-check" id="pswd-check">Show password</label>
    <div class="requirements">
        <p>Password must: </p>
        <ul class="requirement-list">
            <li class="requirement-item">Be at least 12 characters long</li>
            <li class="requirement-item">Contain at least one capital letter</li>
            <li class="requirement-item">Contain at least number</li>
            <li class="requirement-item">Contain at least one special character</li>
        </ul>
    </div>
    <input type="submit" id="submit" value="Sign in">
    <p class="reg">No account? <a href="/account/register">Sign up</a></p>
</form>

